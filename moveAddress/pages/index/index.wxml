<!--index.wxml-->
<view class="container">
 <input bindinput="startSearch" class="input_style"/>
 <view class='map'>
    <map 
      id="map"
      longitude="{{longitude}}"
      latitude="{{latitude}}"
      scale="14"
      markers="{{markers}}"
      show-location
      style="width: 100%; height: 300px;"
      bindmarkertap = "clickEvent"
    ></map>
 </view>
</view>
