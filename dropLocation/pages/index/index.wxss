   position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
}
#address_map{
  /* width: 100%;
  height: 50%; */
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 45%;
  width: 100%;
}
.list{
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 55%;
  width: 100%;
  font-size: 14px;
  color: #333;
}
.fixed_marker{
  position: absolute;
  top:-50px;
  right:0;
  left:0;
  bottom: 0;
  margin: auto;
  width:40px;
  height: 40px;
}
.return_location{
  position: absolute;
  left:0;
  bottom: 0;
  width:50px;
  height: 50px;
}
.swiper-tab{  
  position: absolute;
  right: 0;
  left: 0;
  height: 44px;
  line-height: 44px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: 2rpx solid #777777;  
  text-align: center;
}  
.swiper-tab-list{  
  width: 25%;  
  font-size:14px; 
  color: #333;
}  
.on{ 
  border-bottom: 3px solid #0091ff;
  color: #0091ff;
}  
.list_content{
  position: absolute;
  top: 44px;
  bottom: 0;
  left: 0;
  right: 0;
  overflow: auto;
}
.list_item{
  padding:8px 10px 0;
  height: 50px;
  font-size: 14px;
  border-bottom: 1px solid #000;
}
.current_address{
  position: relative;
  padding:0 10px;
  line-height: 50px;

}
.current_address::after{
  content: '当前位置';
  position: absolute;
  right:10px;
  top:0;
  color:#0091ff;
}
.item_text{
  box-sizing: border-box;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}